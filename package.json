    "transform": {
      "^.+\\.(ts|tsx)$": ["babel-jest", { "presets": ["next/babel"] }]
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ]
  }
}
